@model DAX_Block2_2024.Entities.News

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Add News</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item">News</li>
                    <li class="breadcrumb-item active">Add News</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Please fill full fields</h3>
                    </div>
                    <form asp-area="Admin" asp-controller="New" asp-action="Edit" id="quickForm newsSelect" method="post" enctype="multipart/form-data">
                        <div class="card-body">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                                <div class="col-lg-12 form-group">
                                    <label asp-for="Id" class="control-label">News To Update</label>
                                    <select asp-for="Id" asp-items="@((SelectList)ViewData["NewsList"])" class="form-control select2" style="width: 100%;" required onchange="fetchNewsData(this.value)">
                                        <option value="-1">Select a news to update</option>
                                    </select>
                                    <span asp-validation-for="Id" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6 form-group">
                                    <label asp-for="Title" class="control-label">Name</label>
                                    <input asp-for="Title" class="form-control" id="exampleInputName1" placeholder="Name" required>
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                                <div class="col-lg-6 form-group">
                                    <label asp-for="Content" class="control-label">Content</label>
                                    <input asp-for="Content" class="form-control" id="exampleInputContent1" placeholder="Content" required>
                                    <span asp-validation-for="Content" class="text-danger"></span>
                                </div>

                            </div>

                            <div class="row">
                                <div class="col-lg-6 form-group">
                                    <label asp-for="CreateDate" class="control-label">Date</label>
                                    <div class="input-group date" id="reservationdate" data-target-input="nearest">
                                        <input asp-for="CreateDate" type="text" class="form-control datetimepicker-input" id="CreateDate" data-target="#reservationdate" required>
                                        <div class="input-group-append" data-target="#reservationdate" data-toggle="datetimepicker">
                                            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                        </div>
                                    </div>
                                    <span asp-validation-for="CreateDate" class="text-danger"></span>
                                </div>
                                <div class="col-lg-6 form-group">
                                    <label asp-for="CreateBy" class="control-label">Post By</label>
                                    <select asp-for="CreateBy" asp-items="@((SelectList)ViewData["CreateBy"])" class="form-control select2 select2-hidden-accessible" style="width: 100%;" required>
                                        <!-- Options will be populated here -->
                                    </select>
                                    <span asp-validation-for="CreateBy" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6 form-group">
                                    <label asp-for="Image" class="control-label">Files</label>
                                    <input type="file" class="form-control" name="ImageFile" id="exampleInputFile1" required>
                                    <span asp-validation-for="Image" class="text-danger"></span>
                                </div>
                                <div class="col-lg-6 form-group">
                                    <label asp-for="Status" class="control-label">Status</label>
                                    <select asp-for="Status" class="form-control" required>
                                        <option value="" selected disabled>Select News Status</option>
                                        <option value="true">Active</option>
                                        <option value="false">Inactive</option>
                                    </select>
                                    <span asp-validation-for="Status" class="text-danger"></span>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-lg-12 form-group">
                                    <label asp-for="Description" class="control-label">Description</label>
                                    <textarea asp-for="Description" cols="100%" rows="7" class="form-control" id="Decription" placeholder="Description" required></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>


                        </div>

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>
                <!-- /.card -->
            </div>
            <!--/.col (left) -->
            <!-- right column -->
            <div class="col-md-6">

            </div>
            <!--/.col (right) -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>

<script>
    $(document).ready(function () {
        $('#CreateDate').datetimepicker({
            format: 'DD/MM/YYYY'
        });
    });
    function fetchNewsData(newsId) {
        if (newsId) {
            fetch(`/Admin/New/GetNewsDetails?id=${newsId}`)
                .then(response => response.json())
                .then(data => {
                    if (data) {
                        document.getElementById('exampleInputName1').value = data.title;
                        document.getElementById('exampleInputContent1').value = data.content;
                        document.getElementById('Decription').value = data.description;
                        $('#CreateDate').datetimepicker('date', data.createDate);
                        let createBySelect = document.querySelector('select[name="CreateBy"]');
                        Array.from(createBySelect.options).forEach(option => {
                            if (option.value === data.createdBy.toString()) {
                                createBySelect.value = data.createdBy.toString();
                            }
                        });

                        let statusSelect = document.querySelector('select[name="Status"]');
                        statusSelect.value = data.status.toString();
                    }
                }).catch(error => console.error('Error fetching news data:', error));
        } else {
            console.log('No news selected');
        }
    }

</script>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
