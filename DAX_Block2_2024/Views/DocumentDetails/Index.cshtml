<script>
    $(document).ready(function () {
        var addAntiForgeryToken = function (data) {
            data.__RequestVerificationToken = $('input[name=__RequestVerificationToken]').val();
            return data;
        };

        var newsId = @Model.DocumentDetails.Id;
        $("#postButton button").click(function (event) {
            event.preventDefault(); // Prevent the form from traditional submitting
            var commentContent = $("#commentBox").val();
            var username = '@Context.Session.GetString("username")';
            var commentDate = new Date().toISOString();

            $.ajax({
                url: '@Url.Action("PostComment", "DocumentDetails")',
                type: 'POST',
                dataType: 'json',
                data: addAntiForgeryToken({
                    comment: commentContent,
                    username: username,
                    newsId: newsId,
                    commentDate: commentDate
                }),
                success: function (data) {
                    if (data.success) {
                        $("#commentBox").val("");
                        console.log("Comment posted successfully!");
                    } else {
                        console.log("Error: " + data.message);
                    }
                },
                error: function (xhr, status, error) {
                    alert("An error occurred: " + error);
                }
            });
        });
    });
</script>
