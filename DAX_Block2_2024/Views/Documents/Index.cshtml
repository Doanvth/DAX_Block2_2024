    <div class="container">
        <h1>List Documents</h1>
        @foreach (var document in Model)
        {
            <div class="row">
                <div class="col-xl-5 pb-3">
                    <img src="~/images/@document.Image" class="pe-4 h-100 w-100 img-fluid" alt="@document.Image">
                </div>
                <div class="col-xl-7 shopping-mall">
                    <p class="fs-24 fw-bold ">
                        @document.Content
                    </p>
                    <div class="row color-9A9AB0">
                        <div class="col-xl-4">
                            <p>@document.PostByNavigation.UserName</p>
                        </div>
                        <div class="col-xl-6">
                            <p>@document.DatePost.Date.ToShortDateString()</p>
                        </div>
                    </div>
                    <p class="justify-content-around">
                        @document.Description
                    </p>
                </div>
            </div>
            <br />
        }
        <nav aria-label="Page navigation example">
