@model IEnumerable<DAX_Block2_2024.Entities.Document>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container pe-5 ps-5">
    <h1>List Documents</h1>
    @foreach (var document in Model)
    {
        <div class="row hover-list-popular">
            <div class="col-xl-5 pb-3 pt-3">
                <img src="@document.Image" class="pe-4 h-100 w-100 img-fluid" alt="@document.Image">
            </div>
            <div class="col-xl-7 shopping-mall">
                <a class="custom-link"
                   asp-controller="DocumentDetails"
                   asp-action="Index"
                   asp-route-id="@document.Id">
                    <p class="fs-24 fw-bold text-black">
                        @document.Content
                    </p>
                </a>
                <div class="row color-9A9AB0">
                    <div class="col-xl-4">
                        <p>@document.PostByNavigation.FullName</p>
                    </div>
                    <div class="col-xl-6">
                        <p>@document.DatePost.Date.ToShortDateString()</p>
                    </div>
                </div>
                <p class="justify-content-around">
                    @document.Description
                </p>
            </div>
        </div>
        <br />
    }
</div>

